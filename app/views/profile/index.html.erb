<div class="min-h-screen bg-[#F5F5F5] pb-24">
  
  <%= render 'shared/header' %>

  <main class="px-6 py-8 space-y-6">
    
    <%= form_with url: profile_update_path, method: :patch, local: true, multipart: true, class: "space-y-6" do |f| %>
      
      <div class="flex flex-col items-center">
        <div class="relative">
          <div class="w-32 h-32 rounded-full overflow-hidden border-4 border-white shadow-lg">
            <img id="avatar-preview" src="<%= current_user.avatar_url %>" 
                 alt="Profile" 
                 class="w-full h-full object-cover">
          </div>
          <label for="avatar-input" class="absolute bottom-0 right-0 bg-teal-500 text-white w-10 h-10 rounded-full flex items-center justify-center cursor-pointer shadow-lg hover:bg-teal-600 transition-all">
            <i class="fas fa-camera"></i>
          </label>
          <%= f.file_field :avatar, id: "avatar-input", class: "hidden", accept: "image/*", onchange: "previewAvatar(event)" %>
        </div>
        <h2 class="text-xl font-bold text-gray-900 mt-4">
          <%= current_user.username || "Usuário" %>
        </h2>
        <p class="text-sm text-gray-500">
          <%= current_user.email %>
        </p>
      </div>

      <div class="space-y-4">
        
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Nome</label>
          <%= f.text_field :username, 
              value: current_user.username,
              placeholder: "Digite seu nome",
              class: "appearance-none block w-full px-4 py-4 border border-gray-300 placeholder-gray-400 text-gray-900 rounded-2xl focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-transparent text-base bg-white" %>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Idade</label>
          <%= f.number_field :age, 
              value: current_user.age,
              placeholder: "Digite sua idade",
              class: "appearance-none block w-full px-4 py-4 border border-gray-300 placeholder-gray-400 text-gray-900 rounded-2xl focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-transparent text-base bg-white" %>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Peso (kg)</label>
          <%= f.number_field :weight, 
              value: current_user.weight,
              step: 0.1,
              placeholder: "Digite seu peso",
              class: "appearance-none block w-full px-4 py-4 border border-gray-300 placeholder-gray-400 text-gray-900 rounded-2xl focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-transparent text-base bg-white" %>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Altura (cm)</label>
          <%= f.number_field :height, 
              value: current_user.height,
              placeholder: "Digite sua altura",
              class: "appearance-none block w-full px-4 py-4 border border-gray-300 placeholder-gray-400 text-gray-900 rounded-2xl focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-transparent text-base bg-white" %>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Objetivo</label>
          <%= f.text_area :goal, 
              value: current_user.goal,
              rows: 4,
              placeholder: "Digite seu objetivo (ex: correr 10km em 50 minutos)",
              class: "appearance-none block w-full px-4 py-4 border border-gray-300 placeholder-gray-400 text-gray-900 rounded-2xl focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-transparent text-base resize-none bg-white" %>
        </div>

      </div>

      <div class="pt-2">
        <%= f.submit "Editar perfil", 
            class: "w-full flex justify-center py-5 px-4 border border-transparent text-base font-semibold rounded-2xl text-white bg-teal-500 hover:bg-teal-600 focus:outline-none transition-all duration-200 shadow-lg cursor-pointer" %>
      </div>

    <% end %>

    <% if current_user.strava_connected? %>
      <div class="bg-teal-50 dark:bg-teal-900/30 border border-teal-200 dark:border-teal-700 rounded-2xl p-4 flex items-center justify-between">
        <div class="flex items-center gap-3">
          <i class="fab fa-strava text-2xl text-orange-500"></i>
          <div>
            <p class="font-semibold text-gray-900 dark:text-teal-100">Strava Conectado</p>
            <p class="text-xs text-gray-600 dark:text-teal-200/80">Última sincronização: <%= current_user.strava_integration.last_sync_at&.strftime('%d/%m/%Y %H:%M') || 'Nunca' %></p>
          </div>
        </div>
        <%= button_to strava_disconnect_path, method: :delete, class: "text-sm text-red-500 hover:text-red-700 dark:text-red-400 dark:hover:text-red-300 font-medium" do %>
          Desconectar
        <% end %>
      </div>
    <% else %>
      <div class="bg-orange-50 dark:bg-orange-900/30 border border-orange-200 dark:border-orange-700 rounded-2xl p-4">
        <%= link_to strava_connect_path, class: "flex items-center justify-center gap-2 text-orange-500 dark:text-orange-400 font-semibold" do %>
          <i class="fab fa-strava text-xl"></i>
          Conectar Strava
        <% end %>
      </div>
    <% end %>

    <div class="pt-4">
      <%= button_to "Sair", destroy_user_session_path, method: :delete, 
          class: "w-full flex justify-center py-4 px-4 border-2 border-red-500 text-base font-semibold rounded-2xl text-red-500 hover:bg-red-50 focus:outline-none transition-all duration-200 cursor-pointer" %>
    </div>

  </main>

  <%= render 'shared/footer' %>

</div>

<script>
function previewAvatar(event) {
  const file = event.target.files[0];
  if (file) {
    const reader = new FileReader();
    reader.onload = function(e) {
      document.getElementById('avatar-preview').src = e.target.result;
    }
    reader.readAsDataURL(file);
  }
}
</script>