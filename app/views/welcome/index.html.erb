<div class="min-h-screen flex flex-col items-center justify-center bg-gradient-to-b from-gray-900 to-gray-800 px-6">
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute inset-0 bg-black opacity-60"></div>
    <img src="https://images.unsplash.com/photo-1552674605-db6ffd4facb5?w=800&q=80" 
         alt="Runner" 
         class="w-full h-full object-cover">
  </div>

  <div class="relative z-10 text-center space-y-8 w-full max-w-sm">
    <div class="mb-12">
      <h1 class="text-6xl font-bold text-white mb-3">
        Runi<span class="text-teal-400">fy</span>
      </h1>
      <div class="h-1 w-24 bg-gradient-to-r from-teal-400 to-teal-600 mx-auto"></div>
    </div>

    <div class="space-y-4">
      <h2 class="text-2xl font-semibold text-white">
        Sua evolução começa aqui.
      </h2>
      <p class="text-gray-300 text-base">
        Treinos personalizados com inteligência artificial
      </p>
    </div>

    <div class="space-y-4 pt-12">
      <%= link_to new_user_session_path, 
          class: "block w-full bg-teal-500 hover:bg-teal-600 text-white font-semibold py-5 px-6 rounded-2xl transition-all duration-200 shadow-lg" do %>
        Entrar
      <% end %>

      <%= link_to new_user_registration_path, 
          class: "block w-full bg-transparent border-2 border-orange-500 hover:bg-orange-500 text-orange-500 hover:text-white font-semibold py-5 px-6 rounded-2xl transition-all duration-200" do %>
        Cadastrar-se
      <% end %>
    </div>
  </div>
</div>