<div class="min-h-screen bg-[#F5F5F5] pb-24">
  
  <%= render 'shared/header' %>

  <main class="px-6 py-6">
    
    <div class="flex items-center justify-between mb-6">
      <h2 class="text-2xl font-bold text-gray-900">Notificações</h2>
      
      <% if @unread_count > 0 %>
        <%= link_to mark_all_as_read_notifications_path, method: :post, 
            class: "text-sm text-teal-500 hover:text-teal-600 font-medium" do %>
          Marcar todas como lidas
        <% end %>
      <% end %>
    </div>

    <% if @notifications.any? %>
      <div class="space-y-3">
        <% @notifications.each do |notification| %>
          <div class="bg-white rounded-2xl shadow-sm overflow-hidden <%= 'border-l-4 border-teal-500' unless notification.read %>">
            <%= button_to mark_as_read_notification_path(notification), method: :post, 
                class: "block p-4 hover:bg-gray-50 transition-colors w-full text-left border-0 bg-transparent cursor-pointer" do %>
              
              <div class="flex items-start gap-4">
                <!-- Ícone baseado no tipo -->
                <div class="flex-shrink-0 w-12 h-12 rounded-full flex items-center justify-center
                            <%= case notification.notification_type
                                when 'workout_reminder' then 'bg-blue-100'
                                when 'sync_reminder' then 'bg-yellow-100'
                                when 'congratulations' then 'bg-green-100'
                                when 'weekly_summary' then 'bg-purple-100'
                                end %>">
                  <i class="fas <%= case notification.notification_type
                                    when 'workout_reminder' then 'fa-running text-blue-500'
                                    when 'sync_reminder' then 'fa-sync text-yellow-500'
                                    when 'congratulations' then 'fa-trophy text-green-500'
                                    when 'weekly_summary' then 'fa-chart-line text-purple-500'
                                    end %> text-xl"></i>
                </div>

                <!-- Conteúdo -->
                <div class="flex-1 min-w-0">
                  <div class="flex items-start justify-between gap-2">
                    <h3 class="font-semibold text-gray-900 <%= 'font-bold' unless notification.read %>">
                      <%= notification.title %>
                    </h3>
                    <% unless notification.read %>
                      <span class="flex-shrink-0 w-2 h-2 bg-teal-500 rounded-full"></span>
                    <% end %>
                  </div>
                  
                  <p class="text-sm text-gray-600 mt-1">
                    <%= notification.message %>
                  </p>
                  
                  <p class="text-xs text-gray-400 mt-2">
                    <%= time_ago_in_words(notification.sent_at) %> atrás
                  </p>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="bg-white rounded-2xl shadow-sm p-12 text-center">
        <div class="w-20 h-20 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <i class="fas fa-bell-slash text-3xl text-gray-400"></i>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Nenhuma notificação</h3>
        <p class="text-gray-500">Você não tem notificações no momento</p>
      </div>
    <% end %>

  </main>

  <%= render 'shared/footer' %>

</div>