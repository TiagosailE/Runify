<style>
  @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap');
  
  body, .font-poppins {
    font-family: 'Poppins', sans-serif !important;
  }
</style>

<div class="min-h-screen bg-[#F5F5F5] pb-24 font-poppins">
  
  <header class="bg-white shadow-sm sticky top-0 z-10">
    <div class="flex items-center justify-between px-6 py-4">
      <button class="text-gray-700">
        <i class="fas fa-bars text-xl"></i>
      </button>
      <h1 class="text-2xl font-bold">
        Runi<span class="text-teal-500">fy</span>
      </h1>
      <div class="w-6"></div>
    </div>
  </header>

  <main class="px-6 py-6 space-y-8">
    
    <% if current_user.strava_connected? %>
      
      <section>
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-lg font-semibold text-gray-900">
            Suas <%= current_user.recent_activities.count %> últimas atividades
          </h2>
          <%= button_to sync_strava_path, method: :post, class: "text-sm text-teal-500 hover:text-teal-600 font-medium flex items-center gap-1" do %>
            <i class="fas fa-sync-alt"></i>
            Sincronizar
          <% end %>
        </div>
        
        <% if current_user.recent_activities.any? %>
          <div class="space-y-4">
            
            <% current_user.recent_activities.each do |activity| %>
              <div class="relative bg-[#2EC4B6]/[0.08] rounded-2xl p-6 mb-5 shadow-md overflow-visible">
                
                <svg class="absolute bottom-9 -right-6 w-28 h-3 text-[#FF6A3D] transform -rotate-2 pointer-events-none" 
                     viewBox="0 0 100 10" fill="currentColor" preserveAspectRatio="none">
                  <path d="M0 5 L95 3 A 2 2 0 0 1 95 7 Z" />
                </svg>

                <div class="relative z-10 flex justify-between items-start">
                  <div class="flex flex-col justify-between h-full space-y-3">
                    
                    <p class="text-xs text-gray-500 font-medium pl-0.5">
                      <%= activity.start_date&.strftime("%d/%m/%Y") || activity.created_at.strftime("%d/%m/%Y") %> 
                    </p>

                    <h3 class="text-base font-bold text-gray-800 leading-tight">
                      <%= activity.name %>
                    </h3>

                    <div class="flex gap-6 mt-1">
                      <div>
                        <p class="text-[#FF6A3D] font-bold text-lg leading-none">
                          <%= activity.duration_formatted %>
                        </p>
                        <p class="text-gray-400 text-xs mt-1">Tempo</p>
                      </div>
                      
                      <div>
                        <p class="text-[#E9C46A] font-bold text-lg leading-none">
                          <%= activity.pace_per_km %>
                        </p>
                        <p class="text-gray-400 text-xs mt-1">Pace</p>
                      </div>
                    </div>
                  </div>

                  <div class="flex flex-col items-end justify-center h-full pt-2">
                    <div class="flex items-baseline gap-1 relative z-20">
                      <span class="text-4xl font-extrabold text-gray-900 tracking-tight">
                        <%= activity.distance_km %>
                      </span>
                      <span class="text-lg font-bold text-gray-900">Km</span>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>

          </div>
        <% else %>
          <div class="bg-white rounded-2xl p-6 shadow-sm text-center">
            <i class="fas fa-running text-4xl text-gray-300 mb-3"></i>
            <p class="text-gray-500">Nenhuma atividade encontrada</p>
            <p class="text-sm text-gray-400 mt-2">Faça uma corrida e sincronize novamente</p>
          </div>
        <% end %>
      </section>

    <% else %>
      
      <section>
        <div class="bg-white rounded-2xl p-6 shadow-sm text-center space-y-4">
          <div class="w-20 h-20 bg-orange-100 rounded-full flex items-center justify-center mx-auto">
            <i class="fas fa-link text-3xl text-orange-500"></i>
          </div>
          <h3 class="text-xl font-bold text-gray-900">Conecte seu Strava</h3>
          <p class="text-gray-600">
            Conecte sua conta do Strava para importar suas atividades e receber treinos personalizados
          </p>
          <%= link_to strava_connect_path, class: "inline-block w-full bg-orange-500 hover:bg-orange-600 text-white font-semibold py-4 px-6 rounded-2xl transition-all duration-200 shadow-lg" do %>
            <i class="fab fa-strava mr-2"></i>
            Conectar com Strava
          <% end %>
        </div>
      </section>

    <% end %>

    <section>
      <h2 class="text-lg font-semibold text-gray-900 mb-4">
        Encontre grupos perto de você
      </h2>
      
      <div class="flex gap-3 overflow-x-auto pb-2 -mx-6 px-6 scrollbar-hide">
        
        <div class="min-w-[160px] rounded-2xl overflow-hidden shadow-sm relative">
          <img src="https://images.unsplash.com/photo-1530549387789-4c1017266635?w=400&q=80" 
               alt="Grupo" 
               class="w-full h-32 object-cover">
          <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
          <div class="absolute bottom-0 left-0 right-0 p-3">
            <h3 class="text-white font-semibold text-sm">Unidos Runners</h3>
            <p class="text-white text-xs opacity-90">Porto Alegre, RS</p>
          </div>
        </div>

        <div class="min-w-[160px] rounded-2xl overflow-hidden shadow-sm relative">
          <img src="https://images.unsplash.com/photo-1571019614242-c5c5dee9f50b?w=400&q=80" 
               alt="Grupo" 
               class="w-full h-32 object-cover">
          <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
          <div class="absolute bottom-0 left-0 right-0 p-3">
            <h3 class="text-white font-semibold text-sm">Run da Sun Pe</h3>
            <p class="text-white text-xs opacity-90">Porto Alegre, RS</p>
          </div>
        </div>

      </div>
    </section>

  </main>

  <%= render 'shared/footer' %>

</div>