<div id="loading-modal" data-loading-target="modal" class="hidden fixed inset-0 z-50 items-center justify-center px-6 bg-black/60 backdrop-blur-sm transition-all duration-300" role="dialog" aria-modal="true">
  
  <div class="bg-white rounded-3xl p-8 w-full max-w-sm text-center shadow-2xl transform transition-all scale-100 relative overflow-hidden">
    
    <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-teal-400 to-orange-400"></div>

    <div data-loading-target="spinner" class="relative w-24 h-24 mx-auto mb-6">
      <div class="absolute inset-0 border-4 border-gray-100 rounded-full"></div>
      
      <div class="absolute inset-0 border-4 border-teal-500 rounded-full border-t-transparent animate-spin"></div>
      
      <div class="absolute inset-0 flex items-center justify-center">
        <i class="fas fa-running text-3xl text-teal-500 animate-pulse"></i>
      </div>
    </div>

    <h3 class="text-xl font-bold text-gray-900 mb-2">
      Criando seu treino
    </h3>

    <p data-loading-target="message" class="text-gray-500 text-sm font-medium transition-opacity duration-200">
      Conectando com a IA...
    </p>

    <div class="mt-8 w-full bg-gray-100 rounded-full h-1.5 overflow-hidden">
      <div class="bg-gradient-to-r from-teal-500 to-teal-400 h-1.5 rounded-full w-1/3 animate-[loading_2s_ease-in-out_infinite]"></div>
    </div>

  </div>
</div>

<style>
  @keyframes loading {
    0% { transform: translateX(-100%); width: 20%; }
    50% { width: 40%; }
    100% { transform: translateX(200%); width: 20%; }
  }
</style>