<header class="<%= controller_name == 'pacers' ? 'bg-[#1A1F2E] border-gray-700' : 'bg-white border-gray-200 dark:bg-gray-900 dark:border-gray-800' %> shadow-sm border-b sticky top-0 z-50 transition-colors duration-300">
  <div class="flex items-center justify-between px-6 py-4">
    
    <%= link_to pacers_path, class: "#{controller_name == 'pacers' ? 'text-white' : 'text-gray-600 dark:text-gray-200'} hover:text-teal-500 transition-colors" do %>
      <i class="fas fa-users text-xl"></i>
    <% end %>
    
    <h1 class="text-2xl font-bold <%= controller_name == 'pacers' ? 'text-white' : 'text-gray-900 dark:text-white' %>">
      Runi<span class="text-teal-500">fy</span>
    </h1>
    
    <div class="flex items-center gap-4">
      <%= link_to notifications_path, class: "relative #{controller_name == 'pacers' ? 'text-white' : 'text-gray-600 dark:text-gray-200'} hover:text-teal-500 transition-colors" do %>
        <i class="fas fa-bell text-xl"></i>
        
        <% if current_user && current_user.notifications.unread.count > 0 %>
          <span class="absolute -top-1 -right-1 bg-red-500 text-white text-xs rounded-full w-5 h-5 flex items-center justify-center font-bold">
            <%= current_user.notifications.unread.count %>
          </span>
        <% end %>
        
      <% end %>
    </div>
    
  </div>
</header>