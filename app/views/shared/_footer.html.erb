<footer class="fixed bottom-0 left-0 right-0 <%= controller_name == 'pacers' ? 'bg-[#1A1F2E] border-gray-700' : 'bg-white dark:bg-gray-900 border-gray-200 dark:border-gray-800' %> border-t shadow-lg z-40">
  <nav class="flex justify-around items-center py-3 px-6">
    <%= link_to dashboard_path, class: "flex flex-col items-center gap-1 #{current_page?(dashboard_path) ? 'text-teal-500' : (controller_name == 'pacers' ? 'text-gray-400' : 'text-gray-500 dark:text-gray-400')} hover:text-teal-500 transition-colors" do %>
      <i class="fas fa-home text-xl"></i>
      <span class="text-xs font-medium">Início</span>
    <% end %>

    <%= link_to training_index_path, class: "flex flex-col items-center gap-1 #{current_page?(training_index_path) ? 'text-teal-500' : (controller_name == 'pacers' ? 'text-gray-400' : 'text-gray-500 dark:text-gray-400')} hover:text-teal-500 transition-colors" do %>
      <i class="fas fa-dumbbell text-xl"></i>
      <span class="text-xs font-medium">Treino</span>
    <% end %>

    <%= link_to history_path, class: "flex flex-col items-center gap-1 #{current_page?(history_path) ? 'text-teal-500' : (controller_name == 'pacers' ? 'text-gray-400' : 'text-gray-500 dark:text-gray-400')} hover:text-teal-500 transition-colors" do %>
      <i class="fas fa-chart-line text-xl"></i>
      <span class="text-xs font-medium">Histórico</span>
    <% end %>

    <%= link_to settings_path, class: "flex flex-col items-center gap-1 #{current_page?(settings_path) ? 'text-teal-500' : (controller_name == 'pacers' ? 'text-gray-400' : 'text-gray-500 dark:text-gray-400')} hover:text-teal-500 transition-colors" do %>
      <i class="fas fa-cog text-xl"></i>
      <span class="text-xs font-medium">Config</span>
    <% end %>

    <%= link_to profile_path, class: "flex flex-col items-center gap-1 #{current_page?(profile_path) ? 'text-teal-500' : (controller_name == 'pacers' ? 'text-gray-400' : 'text-gray-500 dark:text-gray-400')} hover:text-teal-500 transition-colors" do %>
      <i class="fas fa-user text-xl"></i>
      <span class="text-xs font-medium">Perfil</span>
    <% end %>
  </nav>
</footer>