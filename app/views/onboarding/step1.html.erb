<div class="min-h-screen flex items-center justify-center bg-[#F5F5F5] px-6 py-12">
  <div class="w-full max-w-sm space-y-8">
    
    <div class="text-center">
      <div class="w-full bg-gray-200 rounded-full h-2 mb-8">
        <div class="bg-teal-500 h-2 rounded-full" style="width: 33%"></div>
      </div>
      <h2 class="text-3xl font-bold text-gray-900">
        Seus Dados
      </h2>
      <p class="mt-2 text-base text-gray-600">
        Passo 1 de 3
      </p>
    </div>

    <%= form_with url: onboarding_step2_path, method: :post, local: true, class: "mt-10 space-y-5" do |f| %>
      
      <div class="space-y-5">
        
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Peso (kg)</label>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
              <i class="fas fa-weight text-gray-400"></i>
            </div>
            <%= f.number_field :weight, 
                placeholder: "Ex: 70",
                step: 0.1,
                class: "appearance-none block w-full px-4 py-4 pl-12 border border-gray-300 placeholder-gray-400 text-gray-900 rounded-2xl focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-transparent text-base" %>
          </div>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Altura (cm)</label>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
              <i class="fas fa-ruler-vertical text-gray-400"></i>
            </div>
            <%= f.number_field :height, 
                placeholder: "Ex: 175",
                class: "appearance-none block w-full px-4 py-4 pl-12 border border-gray-300 placeholder-gray-400 text-gray-900 rounded-2xl focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-transparent text-base" %>
          </div>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Data de Nascimento</label>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
              <i class="fas fa-calendar text-gray-400"></i>
            </div>
            <%= f.date_field :birth_date, 
                class: "appearance-none block w-full px-4 py-4 pl-12 border border-gray-300 placeholder-gray-400 text-gray-900 rounded-2xl focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-transparent text-base" %>
          </div>
        </div>

      </div>

      <div class="pt-4">
        <%= f.submit "Continuar", 
            class: "w-full flex justify-center py-5 px-4 border border-transparent text-base font-semibold rounded-2xl text-white bg-teal-500 hover:bg-teal-600 focus:outline-none transition-all duration-200 shadow-lg cursor-pointer" %>
      </div>

    <% end %>

  </div>
</div>