<div class="min-h-screen bg-[#F5F5F5] dark:bg-[#1a1a1a] pb-24">
  
  <%= render 'shared/header' %>

  <main class="px-6 py-6">
    
    <div class="max-w-md mx-auto">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
        <i class="fas fa-plus-circle text-teal-500 mr-2"></i>
        Criar Novo Pacer
      </h2>

      <%= form_with url: create_pacer_path, method: :post, local: true, class: "space-y-5" do |f| %>
        
        <div class="bg-white dark:bg-[#2d3748] rounded-2xl p-5 shadow-sm space-y-4">
          
          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              Nome do Pacer
            </label>
            <%= text_field_tag 'squad[name]', nil, 
                placeholder: "Ex: Corredores de Elite",
                required: true,
                class: "appearance-none block w-full px-4 py-3 border border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white placeholder-gray-400 rounded-xl focus:outline-none focus:ring-2 focus:ring-teal-500" %>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              Descrição (opcional)
            </label>
            <%= text_area_tag 'squad[description]', nil, 
                rows: 3,
                placeholder: "Descreva o objetivo do grupo...",
                class: "appearance-none block w-full px-4 py-3 border border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white placeholder-gray-400 rounded-xl focus:outline-none focus:ring-2 focus:ring-teal-500 resize-none" %>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              Duração do Desafio
            </label>
            <%= select_tag 'squad[challenge_duration]',
                options_for_select([
                  ['1 Semana', 7],
                  ['2 Semanas', 14],
                  ['1 Mês', 30],
                  ['3 Meses', 90],
                  ['Infinito', nil]
                ]),
                class: "appearance-none block w-full px-4 py-3 border border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-xl focus:outline-none focus:ring-2 focus:ring-teal-500" %>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              Data de Início
            </label>
            <%= date_field_tag 'squad[challenge_start]', Date.today, 
                class: "appearance-none block w-full px-4 py-3 border border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-xl focus:outline-none focus:ring-2 focus:ring-teal-500" %>
          </div>

        </div>

        <div class="bg-teal-50 dark:bg-teal-900/20 border border-teal-200 dark:border-teal-800 rounded-2xl p-4">
          <p class="text-sm text-teal-800 dark:text-teal-300">
            <i class="fas fa-info-circle mr-2"></i>
            Após criar, você receberá um código para convidar amigos!
          </p>
        </div>

        <div class="flex gap-3">
          <%= link_to "Cancelar", pacers_path, class: "flex-1 text-center py-3 px-4 border-2 border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 font-semibold rounded-xl hover:bg-gray-50 dark:hover:bg-gray-700 transition-all" %>
          <%= f.submit "Criar Pacer", class: "flex-1 bg-teal-500 hover:bg-teal-600 text-white font-semibold py-3 px-4 rounded-xl transition-all cursor-pointer" %>
        </div>

      <% end %>
    </div>

  </main>

  <%= render 'shared/footer' %>

</div>